<UserControl x:Class="VRVControl.View.GeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VRVControl.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel VerticalAlignment="Top" Width="132" Height="159">
            <RepeatButton Width = "120" Delay="500" Interval="100" 
        		Click="bntIncVol" Content="Volume Up" Margin="3,0" Focusable="False"/>
            <RepeatButton Width = "120" DockPanel.Dock="Top" Delay="500" Interval="100" 
        		Click="bntDecVol" Content="Volume Down" Focusable="False"/>
            <RepeatButton Width = "120" Delay="500" Interval="100" 
            	Click="btnMute" Content="Mute" Margin="3,0" Focusable="False"/>
            <Button x:Name="btnStartVoiceControl" Content="Enable Voice Control" Margin="0 20 0 0" Click="btnStartVoiceControl_Click"  Width="120"/>
            <Button x:Name="btnStopVoiceControl" Content="Disable Voice Control"  Width="120" Click="btnStopVoiceControl_Click" IsEnabled="False"/>
            <Slider x:Name="slider" VerticalAlignment="Top" Width="100" Margin="0 10 0 0" ValueChanged="slider_ValueChanged" Maximum="1" LargeChange="0.01"/>
        </StackPanel>
    </Grid>
</UserControl>
